  .code-line:hover .copy-line-btn {
    opacity: 1;
  }

  .copy-line-btn:hover {
    background: var(--surface-interactive-hover);
    color: var(--text-primary);
  }

  .copy-line-btn.copied {
    opacity: 1;
    background: var(--surface-cyan-soft);
    color: var(--cyan-bright);
  }

  .copy-line-btn svg {
    width: 14px;
    height: 14px;
